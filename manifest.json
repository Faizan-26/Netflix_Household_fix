{
  "manifest_version": 3,
  "name": "Netflix Household fix",
  "version": "1.0",
  "description": "A Chrome extension to fix Netflix household issues for sharing Netflix with family members.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "webNavigation",
    "cookies",
    "notifications"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://web.prod.cloud.netflix.com/*",
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.min.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "injector.min.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}
